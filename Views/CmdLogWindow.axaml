<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AudioConsolidator.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AudioConsolidator.Views.CmdLogWindow"
        x:DataType="viewModels:CmdLogViewModel"
        Title="Command Line Log"
        Width="600"
        Height="450">
    <Border Margin="10" Padding="10" Background="{DynamicResource SystemChromeMediumColor}" 
            CornerRadius="10">
        <ScrollViewer>
            <SelectableTextBlock Text="{Binding Log}" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Border>
</Window>
